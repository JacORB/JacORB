<?xml version="1.0"?>

<project name="trading" default="all" basedir="../../..">

  <!-- ==================================================== -->
  <!--             ORB build file                         -->
  <!-- $Id$ -->
  <!-- ==================================================== -->

   <target name="init">
	<property name="dirs.base" value="${basedir}"/>
	<property name="classdir" value="${dirs.base}/classes"/>
	<property name="src" value="${dirs.base}/src"/>
   </target>

   <target name="all" depends="init,impl,db,util,client,test"/>

   <target name="impl">
 	<javac srcdir="${src}"
               destdir="${classdir}"
	       includes="jacorb/trading/impl/**.java"
	       />
   </target>

   <target name="db">
   <ant antfile="${src}/jacorb/trading/db/build.xml" dir="${basedir}"/>
   </target>

   <target name="util">
 	<javac srcdir="${src}"
               destdir="${classdir}"
	       includes="jacorb/trading/util/**.java"
	       />
   </target>

   <target name="client">
	   <ant
	   antfile="${src}/jacorb/trading/client/build.xml" dir="${basedir}"
	   />
   </target>

   <target name="test">
 	<javac srcdir="${src}"
               destdir="${classdir}"
	       includes="jacorb/trading/test/**.java"
	       />
   </target>

   <target name="clean">
   </target>

</project>

