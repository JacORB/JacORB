<?xml version="1.0"?>

<project name="events" default="all" basedir="../../../..">

  <!-- ==================================================== -->
  <!--             ORB build file                         -->
  <!-- $Id$ -->
  <!-- ==================================================== -->


   <target name="init">
	<property name="dirs.base" value="${basedir}"/>
	<property name="classdir" value="${dirs.base}/classes"/>
	<property name="classpath" value="${dirs.base}/classes:${java.class.path}"/>
	<property name="src" value="${dirs.base}/src"/>
	<property name="lib" value="${dirs.base}/lib"/>
	<property name="include" value="${dirs.base}/idl"/>
        <taskdef name="jacidl"
                 classname="org.jacorb.idl.JacIDL"
                 classpath="${basedir}/classes"/>
   </target>

   <target name="all" depends="init,idl,coscompile">
	<javac debug="${debug}" srcdir="${src}"
               destdir="${classdir}"
	       includes="org/jacorb/events/**.java"
	        />
   </target>


   <target name="idl" depends="coseventsidl,jacorbeventidl" >
	<javac debug="${debug}" srcdir="${src}"
	       includes="org/jacorb/orb/events/**.java"
               destdir="${classdir}"
	        />
   </target>

   <target name="coseventsidl" depends="com,admin">
   </target>

    <target name="com">
        <jacidl generateir="true"
                srcdir="${include}/omg"
                packageprefix="org.omg"
                destdir="${src}/generated"
                includes="CosEventComm.idl"/>
    </target>

    <target name="admin">
        <jacidl generateir="true"
                srcdir="${include}/omg"
                destdir="${src}/generated"
                includepath="${include}/omg"
                includes="CosEventChannelAdmin.idl"/>
    </target>

   <target name="jacorbeventidl">
        <jacidl srcdir="${include}/jacorb"
                destdir="${src}/generated"
                includepath="${include}/omg"
                includes="channel.idl"/>
   </target>

   <target name="coscompile">
	<javac debug="${debug}" srcdir="${src}/generated"
	       includes="org/omg/CosEvent*/**.java"
               destdir="${classdir}"
	        />
   </target>

   <target name="clean" depends="init">
           <delete dir="${src}/generated/org/omg/CosEventComm"/>
           <delete dir="${src}/generated/org/omg/CosEventChannelAdmin"/>
           <delete dir="${classdir}/org/jacorb/events"/>
   </target>

</project>
