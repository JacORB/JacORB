<?xml version="1.0"?>

<project name="poa" default="all" basedir="../../..">

  <!-- ==================================================== -->
  <!-- $Id$ -->
  <!-- ==================================================== -->

   <target name="init">
	<property name="dirs.base" value="${basedir}"/>
	<property name="classdir" value="${dirs.base}/classes"/>
	<property name="src" value="${dirs.base}/src"/>
	<property name="lib" value="${dirs.base}/lib"/>
	<available classname="javax.swing.JTree" property="swing.present" />
   </target>

   <target name="all" depends="init,base,gui"/>
	

   <target name="base">
	<javac srcdir="${src}"
               destdir="${classdir}"
	       includes="jacorb/poa/**.java,jacorb/poa/except/*.java,jacorb/poa/policy/*.java,jacorb/poa/util/*.java"
	        />
   </target>

   <target name="gui" if="swing.present">
	   <echo message="util"/>
	<javac srcdir="${src}"
               destdir="${classdir}"
	       includes="jacorb/poa/gui/**.java,jacorb/poa/gui/**/**.java"
        />
   </target>

   <target name="clean">
   </target>

</project>





