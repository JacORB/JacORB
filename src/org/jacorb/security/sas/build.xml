<?xml version="1.0"?>

<project name="sas" default="all" basedir="../../../../..">

  <!-- ==================================================== -->
  <!--                 iaik build file                      -->
  <!-- $Id$ -->
  <!-- ==================================================== -->

   <target name="init">
	<property name="dirs.base" value="${basedir}"/>
	<property name="classdir" value="${dirs.base}/classes"/>
	<property name="src" value="${dirs.base}/src"/>
      <available classname="com.tagish.auth.Utils" property="jaas.modules.present" />       
   </target>

   <target name="all" depends="init,compile,jaas" />

   <target name="compile">
	<javac srcdir="${dirs.base}"
              destdir="${classdir}"
	        includes="org/jacorb/security/sas/*.java"
		  excludes="org/jacorb/security/sas/NT_*.java"
	        />
   </target>

   <target name="jaas" if="jaas.modules.present">
	<javac srcdir="${dirs.base}"
               destdir="${classdir}"
	       includes="org/jacorb/security/sas/NT_*.java"
	        />
   </target>

</project>







