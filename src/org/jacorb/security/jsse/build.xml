<?xml version="1.0"?>

<project name="security" default="all" basedir="../../../../..">

  <!-- ==================================================== -->
  <!--                 jsse build file                      -->
  <!-- $Id$ -->
  <!-- ==================================================== -->

   <target name="init">
	<property name="dirs.base" value="${basedir}"/>
	<property name="classdir" value="${dirs.base}/classes"/>
	<property name="src" value="${dirs.base}/src"/>
	<available classname="javax.net.ssl.SSLSocketFactory" property="jsse.present" />
   </target>

   <target name="all" depends="init,jsse">

   </target>

   <target name="jsse" if="jsse.present">
	   <javac srcdir="${src}"
               destdir="${classdir}"
	       includes="org/jacorb/security/jsse/*.java"
        />
   </target>
</project>







