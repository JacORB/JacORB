<?xml version="1.0"?>

<project name="ssl" default="all" basedir="../../../../..">

  <!-- ==================================================== -->
  <!--               ssl build file                         -->
  <!-- $Id$ -->
  <!-- ==================================================== -->

   <target name="init">
	<property name="dirs.base" value="${basedir}"/>
	<property name="classdir" value="${dirs.base}/classes"/>
	<property name="src" value="${dirs.base}/src"/>
	<available classname="iaik.x509.X509Certificate" 
                   property="iaik.present" />
	<available classname="javax.net.ssl.TrustManager" 
                   property="sun_jsse.present" />
   </target>

   <target name="all" depends="init,iaik,sun_jsse">
   </target>

   <target name="iaik" if="iaik.present">
           <ant antfile="${src}/org/jacorb/security/ssl/iaik/build.xml" dir="${basedir}"/>
   </target>

   <target name="sun_jsse" if="sun_jsse.present">
           <ant antfile="${src}/org/jacorb/security/ssl/sun_jsse/build.xml" dir="${basedir}"/>
   </target>
</project>









