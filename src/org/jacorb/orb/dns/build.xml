<?xml version="1.0"?>

<!DOCTYPE project [ <!ENTITY common SYSTEM "file:../../../../../common.xml"> ]>

<project name="dns" default="all" basedir="../../../../..">

  <!-- ==================================================== -->
  <!--             dns lookup build file                    -->
  <!-- $Id$ -->
  <!-- ==================================================== -->

   &common;

   <target name="dns-test">
      <available classname="org.xbill.DNS.dns" property="dns.available" />
   </target>

   <target name="all" depends="init,dns-test,dns,dns-delegate"/>


   <target name="dns">
      <antcall target="jacorb-javac">
         <param name="javac-includes" value="org/jacorb/orb/dns/DNSLookup.java,org/jacorb/orb/dns/DNSLookupDelegate.java"/>
      </antcall>
   </target>


   <target name="dns-delegate" if="dns.available">
      <antcall target="jacorb-javac">
         <param name="javac-includes" value="org/jacorb/orb/dns/DNSLookupDelegateImpl.java"/>
      </antcall>
   </target>


   <target name="clean" depends="init">
        <delete dir="${classdir}/org/jacorb/orb/dns" />
   </target>
</project>
