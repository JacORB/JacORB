<?xml version="1.0" encoding="UTF-8"?>

<assembly>
    <id>common-base</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${env.JACORB_HOME}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>bin/**</include>
                <include>demo/**</include>
                <include>etc/**</include>
                <include>idl/**</include>
            </includes>
            <excludes>
                <exclude>bin/jaco</exclude>
                <exclude>bin/idl</exclude>
                <exclude>bin/jaco.bat</exclude>
                <exclude>bin/idl.bat</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${env.JACORB_HOME}/doc</directory>
            <outputDirectory>doc</outputDirectory>
            <includes>
                <include>*</include>
                <include>HOWTO/*</include>
                <include>dds/*</include>
            </includes>
            <excludes>
                <exclude>ProgrammingGuide</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${env.JACORB_HOME}/lib</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
            <excludes>
                <exclude>build</exclude>
                <exclude>src</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>target/site</directory>
            <outputDirectory>doc</outputDirectory>
            <includes>
                <include>*.pdf</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${env.JACORB_HOME}/build.xml</source>
            <destName>build.xml</destName>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <source>${env.JACORB_HOME}/index.html</source>
            <destName>index.html</destName>
            <fileMode>0644</fileMode>
        </file>
    </files>
</assembly>
