<?xml version="1.0"?>

<project name="listenendpoints" default="all" basedir="../../..">

    <import file="../../../etc/common.xml"/>

  <!-- ==================================================== -->
  <!--                   build file                         -->
  <!-- ==================================================== -->


    <target name="init">
	<property name="dirs.base" value="${basedir}"/>
	<property name="classdir" value="${dirs.base}/classes"/>
	<property name="lib" value="${dirs.base}/lib"/>
	<property name="include" value="${dirs.base}/idl"/>
	<property name="idlflags" value="-I${include}/omg -ir  -d ${dirs.base}/test/listenendpoints/echo/generated"/>
   </target>

   <target name="all" depends="init,idl">
	<javac srcdir="${dirs.base}/test/listenendpoints/echo/generated"
               destdir="${classdir}"
	       includes="test/listenendpoints/echo/*.java"
	        />
	<javac srcdir="${dirs.base}"
               destdir="${classdir}"
		   debug="true" includeantruntime="false"
	       includes="test/listenendpoints/echo/*.java"
	        />
   </target>

   <target name="idl" depends="init">
        <java classname="org.jacorb.idl.parser"
              fork="yes"
              classpath="${lib}/idl.jar;${java.class.path}">

	      <arg line="${idlflags}
	      ${dirs.base}/test/listenendpoints/echo/server.idl"/>
         </java>
   </target>

   <target name="clean">
	   <deltree dir="${classdir}/test/listenendpoints/echo"/>
	   <deltree dir="${dirs.base}/test/listenendpoints/echo/generated"/>
   </target>

</project>
