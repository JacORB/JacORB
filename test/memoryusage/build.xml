              fork="yes"
              classpath="${lib}/idl.jar">

	      <arg line="${idlflags}
	      ${dirs.base}/test/${name}/test.idl"/>
         </java>
   </target>
-->

   <target name="clean" depends="init">
           <delete dir="${classdir}/test/memoryusage"/>
           <delete dir="${dirs.base}/test/memoryusage/generated"/>
   </target>

</project>
